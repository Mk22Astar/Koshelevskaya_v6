<Window x:Class="Koshelevskaya_v6.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить клиента" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Имя клиента:" Grid.Row="0" />
        <TextBox x:Name="nameTextBox" Grid.Row="1" />

        <TextBlock Text="Контактная информация:" Grid.Row="2" />
        <TextBox x:Name="phoneTextBox" Grid.Row="3" />

        <Button Content="Выбрать фото" Click="SelectPhoto_Click" Grid.Row="4" HorizontalAlignment="Left" Width="150" />
        <TextBlock x:Name="photoPathText" Grid.Row="4" HorizontalAlignment="Right" />

        <Button Content="Сохранить" Click="Save_Click" Grid.Row="5" HorizontalAlignment="Center" Width="100" Margin="0,10,0,0" />
    </Grid>
</Window>